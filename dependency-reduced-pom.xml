<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>pom-scijava</artifactId>
    <groupId>org.scijava</groupId>
    <version>27.0.1</version>
    <relativePath>pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>io.github.sjcross</groupId>
  <artifactId>TrackAnalysis</artifactId>
  <name>Track_Analysis</name>
  <version>1.1.8-SNAPSHOT</version>
  <description>A Maven project implementing an ImageJ 1.x plugin.</description>
  <url>https://github.com/SJCross/TrackAnalysis/</url>
  <issueManagement>
    <system>GitHub Issues</system>
    <url>https://github.com/SJCross/TrackAnalysis/issues</url>
  </issueManagement>
  <ciManagement>
    <system>None</system>
  </ciManagement>
  <inceptionYear>2017</inceptionYear>
  <mailingLists>
    <mailingList>
      <name>ImageJ Forum</name>
      <archive>http://forum.imagej.net/</archive>
    </mailingList>
  </mailingLists>
  <developers>
    <developer>
      <id>sjcross</id>
      <name>Stephen Cross</name>
      <roles>
        <role>lead</role>
        <role>developer</role>
        <role>debugger</role>
        <role>reviewer</role>
        <role>support</role>
        <role>maintainer</role>
      </roles>
    </developer>
    <developer>
      <id>jdjfisher</id>
      <name>Jordan Fisher</name>
      <roles>
        <role>developer</role>
      </roles>
    </developer>
  </developers>
  <contributors>
    <contributor>
      <name>Stephen Cross</name>
      <roles>
        <role>founder</role>
        <role>developer</role>
      </roles>
      <properties>
        <id>sjcross</id>
      </properties>
    </contributor>
    <contributor>
      <name>Jordan Fisher</name>
      <roles>
        <role>developer</role>
      </roles>
      <properties>
        <id>jdjfisher</id>
      </properties>
    </contributor>
  </contributors>
  <licenses>
    <license>
      <name>GNU General Public License v3.0</name>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <scm>
    <connection>scm:git:git://github.com/SJCross/TrackAnalysis</connection>
    <developerConnection>scm:git:git@github.com:SJCross/TrackAnalysis</developerConnection>
    <url>https://github.com/SJCross/TrackAnalysis</url>
  </scm>
  <organization>
    <name>University of Bristol</name>
  </organization>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.6</version>
        <configuration>
          <finalName>Track_Analysis-${project.version}</finalName>
          <archive>
            <manifest>
              <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
              <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
              <mainClass>io.github.sjcross.TrackAnalysis.TrackAnalysis</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.1.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <minimizeJar>true</minimizeJar>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
              <transformers>
                <transformer>
                  <manifestEntries>
                    <Main-Class>io.github.sjcross.TrackAnalysis.TrackAnalysis</Main-Class>
                    <Specification-Title>${project.artifactId}</Specification-Title>
                    <Specification-Version>${project.version}</Specification-Version>
                  </manifestEntries>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-site-plugin</artifactId>
        <version>3.7.1</version>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>imagej.public</id>
      <url>http://maven.imagej.net/content/groups/public</url>
    </repository>
  </repositories>
  <reporting>
    <plugins>
      <plugin>
        <artifactId>maven-project-info-reports-plugin</artifactId>
        <version>3.0.0</version>
        <configuration>
          <dependencyDetailsEnabled>false</dependencyDetailsEnabled>
        </configuration>
        <reportSets>
          <reportSet>
            <reports>
              <report>dependencies</report>
            </reports>
          </reportSet>
        </reportSets>
      </plugin>
    </plugins>
  </reporting>
  <properties>
    <myscope>compile</myscope>
    <package-name>io.github.sjcross.TrackAnalysis</package-name>
    <maven.compiler.target>1.8</maven.compiler.target>
    <main-class>io.github.sjcross.TrackAnalysis.IO.TrackAnalysisPlugin</main-class>
    <lwjgl.version>3.1.1</lwjgl.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <license.copyrightOwners>Stephen Cross</license.copyrightOwners>
    <native.target>natives-windows</native.target>
    <maven.compiler.source>1.8</maven.compiler.source>
    <license.licenseName>gpl3</license.licenseName>
  </properties>
</project>

